{
  "name": "@dvashim/typescript-config",
  "version": "1.0.2",
  "description": "Shared TypeScript configurations",
  "type": "module",
  "scripts": {
    "test:format": "biome format .",
    "test:exports": "validate-package-exports --check --verify",
    "test": "pnpm run \"/^test:.*/\"",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish"
  },
  "keywords": [
    "typescript",
    "config"
  ],
  "author": {
    "name": "Aleksei Reznichenko",
    "email": "aleksei@dvashim.dev"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@dvashim/biome-config": "^1.0.9",
    "validate-package-exports": "^0.15.0"
  },
  "exports": {
    ".": "./dist/tsconfig.base.json",
    "./base": "./dist/tsconfig.base.json",
    "./lib": "./dist/lib/tsconfig.lib-dev.json",
