{
  "name": "@dvashim/typescript-config",
  "version": "1.1.9",
  "description": "Shared TypeScript configurations",
  "type": "module",
  "scripts": {
    "check:format": "biome format .",
    "check:exports": "validate-package-exports --check",
    "check:ts": "ls -1 ./tests/*.json | xargs -n1 tsc -p",
    "check": "pnpm run \"/^check:.*/\"",
    "changeset": "changeset"
  },
  "keywords": [
    "typescript",
    "config"
  ],
  "author": {
    "name": "Aleksei Reznichenko",
    "email": "aleksei@dvashim.dev"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@dvashim/biome-config": "^1.2.1",
    "typescript": "^5.9.3",
    "validate-package-exports": "^0.18.0"
  },
  "exports": {
    ".": "./dist/tsconfig.base.json",
    "./base": "./dist/tsconfig.base.json",
    "./node": "./dist/tsconfig.node.json",
    "./lib": "./dist/tsconfig.lib-dev.json",
    "./lib/dev": "./dist/tsconfig.lib-dev.json",
    "./lib/prod": "./dist/tsconfig.lib-prod.json",
    "./lib-dev": "./dist/tsconfig.lib-dev.json",
    "./lib-prod": "./dist/tsconfig.lib-prod.json",
    "./app": "./dist/tsconfig.app-react.json",
    "./app/react": "./dist/tsconfig.app-react.json",
    "./app/react/vite": "./dist/tsconfig.app-react-vite.json",
    "./app-react": "./dist/tsconfig.app-react.json",
    "./app-react-vite": "./dist/tsconfig.app-react-vite.json"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dvashim/typescript-config.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
